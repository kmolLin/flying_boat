<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.flyboat.MainActivity"
    android:orientation="horizontal"
    android:weightSum="1">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.48">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高度限制"
                android:id="@+id/button"
                android:background="#00000000"
                android:layout_gravity="left|top" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_gravity="left" />
        </LinearLayout>

        <TextView  android:id="@+id/vertical_sb_progresstext"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/seekbar_reverse"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/vertical_Seekbar"
            android:layout_gravity="center|left" />

        <com.example.user.flyboat.VerticalSeekBar
            android:id="@+id/vertical_Seekbar"
            android:layout_width="wrap_content"
            android:layout_height="192dp"
            android:layout_toRightOf="@+id/seekbar_reverse"
            android:indeterminate="false"
            android:layout_gravity="center_horizontal|bottom" />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="195dp"
        android:layout_height="286dp"
        android:layout_weight="0.48">

       　

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="249dp"
            android:layout_gravity="center_horizontal">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高度"
            android:id="@+id/textView2"
            android:layout_gravity="left|center_horizontal"
            android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加速度"
                android:id="@+id/textView3"
                android:layout_gravity="left|center_horizontal"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView7"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="陀螺儀"
                android:id="@+id/textView5"
                android:layout_gravity="left|center_horizontal"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView8"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="電子羅盤"
                android:id="@+id/textView4"
                android:layout_gravity="left|center_horizontal"
                android:singleLine="false"
                android:textSize="25dp"
                android:textIsSelectable="false" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="尋跡"
                android:id="@+id/button3"
                android:layout_gravity="right" />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="定點"
                android:id="@+id/button2" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0.05"
        android:layout_gravity="right">

        <TextView
            android:text="角度:0"
            android:padding="10dp"
            android:gravity="right"
            android:id="@+id/status"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top" />

        <com.example.user.flyboat.Rocker
            android:id="@+id/rudder"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right" />
    </LinearLayout>

</LinearLayout>
